        { "type": "feature_item", "icon": "local_shipping", "icon_color": "#10B981", "title": "Bepul Yetkazib Berish", "description": "Chakana xaridlar uchun mutlaqo bepul yetkazib berish xizmati", "badge": "YANGI", "badge_color": "#10B981" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "inventory_2", "icon_color": "#F59E0B", "title": "Butun Dunyo Mahsulotlari", "description": "Barcha brendlarning tasdiqlangan va arzon mahsulotlari", "badge": "TOP", "badge_color": "#F59E0B" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "business_center", "icon_color": "#3B82F6", "title": "Ulgurji Tarif", "description": "Bizness egalariga maxsus manfaatli yetkazib berish", "badge": "BIZNESS", "badge_color": "#3B82F6" },
