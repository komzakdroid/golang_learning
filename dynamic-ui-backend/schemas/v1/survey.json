        { "type": "feature_item", "icon": "psychology", "icon_color": "#8B5CF6", "title": "SAHIY AI Assistant", "description": "Mahsulotlarni solishtirish, narx tahlili va ovozli/rasmli qidiruv", "badge": "AI", "badge_color": "#8B5CF6" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "photo_camera", "icon_color": "#EC4899", "title": "Foto Qidiruv", "description": "Ko'zingizga yoqqan mahsulotni rasmga olib qidiring!", "badge": "HOT", "badge_color": "#EC4899" }
      ]
    },
    {
      "id": "ai_showcase",
      "type": "container",
      "padding": {"all": 24},
      "margin": {"left": 16, "right": 16, "bottom": 12},
      "decoration": {
        "background_gradient": { "colors": ["#132D3C", "#0F3748"], "begin": "topLeft", "end": "bottomRight" },
        "border_radius": 20,
        "border": {"color": "#8B5CF6", "width": 2}
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 200},
      "children": [
        {
          "type": "row",
          "main_axis_alignment": "space_between",
          "cross_axis_alignment": "center",
          "children": [
            {
              "type": "column",
              "cross_axis_alignment": "start",
              "flex": 1,
              "children": [
                { "type": "text", "content": "SAHIY AI", "style": { "font_size": 24, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] } } },
                {"type": "sized_box", "height": 8},
                { "type": "text", "content": "• Ovoz bilan qidirish\n• Rasm bilan qidirish\n• Narx tahlili\n• Sifat taqqoslash", "style": { "font_size": 14, "color": "#B0C4D0", "height": 1.5 } }
              ]
            },
            { "type": "animated_icon", "icon": "auto_awesome", "size": 56, "gradient": true, "animation": { "type": "pulse_glow", "duration": 2000, "repeat": true } }
          ]
        },
        {"type": "sized_box", "height": 16},
        {
          "type": "button",
          "text": "AI'ni Sinab Ko'ring",
          "icon": "touch_app",
          "height": 52,
          "border_radius": 26,
          "background_gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] },
          "text_color": "#012B26",
          "font_weight": "bold",
          "animation": {"type": "pulse", "duration": 1500, "repeat": true},
          "action": {"type": "navigate", "route": "/ai_demo"}
        }
      ]
    },
    {
      "id": "feedback_section",
      "type": "container",
      "padding": {"all": 24},
      "margin": {"left": 16, "right": 16, "bottom": 12},
      "decoration": {
        "background_gradient": { "colors": ["#0F3748", "#132D3C"], "begin": "topCenter", "end": "bottomCenter" },
        "border_radius": 20,
        "border": {"color": "#1A4A5C", "width": 1.5}
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 300},
      "children": [
        { "type": "text", "content": "Fikringiz Muhim!", "style": { "font_size": 22, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] }, "text_align": "center" } },
        {"type": "sized_box", "height": 12},
        { "type": "text", "content": "Bizga yana qanday imkoniyatlar kerak?", "style": { "font_size": 15, "color": "#B0C4D0", "text_align": "center", "height": 1.4 } },
        {"type": "sized_box", "height": 20},
        {
          "type": "survey_group",
          "state_key": "survey_selections",
          "options": [
            { "icon": "speed", "text": "Tezroq yetkazib berish", "value": "faster_delivery" },
            { "icon": "payments", "text": "Bo'lib to'lash imkoniyati", "value": "installment" },
            { "icon": "local_offer", "text": "Ko'proq chegirmalar", "value": "more_discounts" },
            { "icon": "verified", "text": "Premium mijoz dasturi", "value": "premium_membership" },
            { "icon": "auto_graph", "text": "Narx monitoring", "value": "price_tracking" }
          ]
        },
        {"type": "sized_box", "height": 20},
        {
          "type": "text_field",
          "controller_key": "feedback_controller",
          "state_key": "feedback_text",
          "hint": "Boshqa takliflaringiz...",
          "max_lines": 4,
          "background_color": "#132D3C",
          "text_color": "#FAF1B5",
          "hint_color": "#6B7280",
          "border_color": "#1A4A5C",
          "focused_border_color": "#F4D589"
        },
        {"type": "sized_box", "height": 20},
        {
          "type": "button",
          "text": "Taklif Yuborish",
          "icon": "send",
          "height": 52,
          "border_radius": 16,
          "background_gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] },
          "text_color": "#0A2937",
          "font_weight": "bold",
          "action": {
            "type": "submit_feedback",
            "route": "/feedback",
            "include_state": ["feedback_text", "survey_selections"]
          }
        }
      ]
    },
    {
      "id": "quick_actions",
      "type": "container",
      "padding": {"all": 20},
      "margin": {"left": 16, "right": 16, "bottom": 12},
