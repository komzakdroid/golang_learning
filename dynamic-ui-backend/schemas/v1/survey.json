          "type": "row",
          "main_axis_alignment": "space_around",
          "children": [
            { "type": "action_button", "icon": "qr_code_scanner", "label": "Scan", "color": "#3B82F6", "route": "/scanner" },
            { "type": "action_button", "icon": "photo_library", "label": "Foto Qidiruv", "color": "#EC4899", "route": "/photo_search" },
            { "type": "action_button", "icon": "mic", "label": "Ovoz", "color": "#10B981", "route": "/voice_search" },
            { "type": "action_button", "icon": "shopping_bag", "label": "Katalog", "color": "#F59E0B", "route": "/catalog" }
          ]
        }
      ]
    },
    {
      "id": "stats_section",
      "type": "container",
      "padding": {"all": 20},
      "margin": {"left": 16, "right": 16, "bottom": 20},
      "decoration": { "background_color": "#132D3C", "border_radius": 20, "border": {"color": "#1A4A5C", "width": 1.5} },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 500},
      "children": [
        { "type": "text", "content": "Bizning Natijalar", "style": { "font_size": 18, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589"] } } },
        {"type": "sized_box", "height": 16},
        {
          "type": "row",
          "main_axis_alignment": "space_around",
          "children": [
            { "type": "stat_item", "value": "1 milliard+", "label": "Mahsulotlar", "icon": "inventory", "gradient": true },
            { "type": "stat_item", "value": "250K+", "label": "Mijozlar", "icon": "people", "gradient": true },
            { "type": "stat_item", "value": "99%", "label": "Qoniqish", "icon": "star", "gradient": true }
          ]
        }
      ]
    }
