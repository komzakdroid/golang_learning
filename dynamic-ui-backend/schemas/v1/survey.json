          "colors": ["#FAF1B5", "#F4D589", "#B27533"],
          "begin": "topLeft",
          "end": "bottomRight"
        },
        "border_radius": 20,
        "shadow": {
          "color": "#F4D58950",
          "blur_radius": 20,
          "offset": {"x": 0, "y": 8}
        }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 0},
      "children": [
        {
          "type": "row",
          "cross_axis_alignment": "center",
          "children": [
            {
              "type": "container",
              "padding": {"all": 12},
              "decoration": {
                "background_color": "#0A2937",
                "border_radius": 12
              },
              "children": [
                { "type": "icon_widget", "icon": "celebration", "size": 32, "color": "#FAF1B5" }
              ]
            },
            {"type": "sized_box", "width": 16},
            {
              "type": "column",
              "cross_axis_alignment": "start",
              "flex": 1,
              "children": [
                { "type": "text", "content": "YANGILIK!", "style": { "font_size": 18, "font_weight": "bold", "color": "#0A2937" } },
